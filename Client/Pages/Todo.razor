@page "/todo"
@inherits TodoBase
@using Microsoft.AspNetCore.Authorization;
@attribute [Authorize]

@if (Items == null)
{
    <h3>Loading</h3>
}
else
{


    <section class="vh-100" style="background-color: #ffff;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-9 col-xl-7">
                    <div class="card rounded-3">
                        <div class="card-body p-4">

                            <h3 class="text-center my-3 pb-3">To Do App</h3>

                            <form class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2">
                                <div class="col-12">
                                    <div class="form-outline">
                                        <input type="text" id="todo" class="" @bind="additem" />

                                    </div>
                                </div>

                                <div class="col-12">
                                    <button type="button" class="btn btn-success" @onclick="Add">Add</button>

                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-warning">Get tasks</button>
                                </div>
                            </form>

                            <table class="table mb-4">

                                <thead>

                                    <tr>

                                        <th scope="col">Todo item</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var todo in Items)
                                    {
                                        <tr>





                                            <td><input class="border-0" @bind="todo.Title" /></td>
                                            <td>
                                                <div class="container">

                                                    <div class="well well-sm text-center">
                                                        <div class="btn-group" data-toggle="buttons">

                                                            
                                                                <input type="checkbox" autocomplete="off" >
                                                            
                                                            </div>
                                                    </div>
                                                </div>
                                    </td>
                                            <td>
                                                <button type="submit" class="btn btn-danger" @onclick=@(() => Delete(todo.Id))>Delete</button>
                                                <button type="submit" class="btn btn-success ms-1">Finished</button>
                                                <button type="submit" class="btn btn-success ms-1" @onclick=@(() => Edit(todo))>Edit</button>
                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>





}

